{
  "include": ["src", "__tests__"],
  "exclude": [],
  "compilerOptions": {
    "outDir": "esm",
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "lib": ["esnext"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": false,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "esModuleInterop": true
  },
}
