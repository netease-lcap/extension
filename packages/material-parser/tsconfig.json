{
  "include": ["build.config.ts", "src", "__tests__"],
  "exclude": ["react-docgen"],
  "compilerOptions": {
    "outDir": "lib",
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "allowJs": true,
    "strict": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": false,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "esModuleInterop": true
  },
}
